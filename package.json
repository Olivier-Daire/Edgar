{
  "name": "Edgar",
  "version": "0.0.1",
  "description": "A web-based VR experience using Cardboard.",
  "main": "build/webvr-manager.js",
  "dependencies": {
    "es6-promise": "^4.0.5",
    "three": "^0.81.2",
    "webvr-polyfill": "^0.9.3"
  },
  "devDependencies": {
    "browserify": "latest",
    "derequire": "latest",
    "watchify": "latest",
    "uglify-js": "latest",
    "jshint": "latest"
  },
  "scripts": {
    "build": "browserify src/main.js | uglifyjs > build/main.js",
    "build-dev": "browserify src/main.js > build/main.js",
    "watch": "watchify src/main.js -v -d -o ' > build/main.js'",
    "copy-polyfill": "cp ../webvr-polyfill/build/webvr-polyfill.js node_modules/webvr-polyfill/build/webvr-polyfill.js",
    "lint": "jshint src/*.js  --config .jshintrc",
    "lint-dev": "jshint src/*.js --config .jshintrc-dev",

    "prebuild": "npm run lint",
    "prebuild-dev": "npm run lint-dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Olivier-Daire/Edgar.git"
  }
}
